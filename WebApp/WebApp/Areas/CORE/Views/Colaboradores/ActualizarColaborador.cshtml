@model ColaboradorEdit
@{
	var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
}
<!-- Scripts -->
<script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
<script src="~/js/wizard.js"></script>



<div id="@viewName">
	<div class="modal-header">
		<h4 class="modal-title">Actualizar Colaborador</h4>
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">×</span>
		</button>
	</div>

	<div class="modal-body">
		
		<div class="container-fluid">
			<div class='row'>
				<div id="wizard" class="col-12">
					<ul class='nav nav-wizard'>
						<li class="active"><a href='#step1' data-toggle="tab"><b><i class="fa fa-user page-header-icon"></i> Datos personales</b><br /></a></li>
						<li><a href='#step2' data-toggle="tab"><b><i class="fa fa-key page-header-icon"></i> Datos del contrato</b><br /></a></li>
						
					</ul>
					<div id="TabUsuarioEdit" class="tab-content ">
						<div class="tab-pane fade " id="step1">
							@Html.PartialAsync("UpdPersona", Model.Persona).Result
						</div>
                        <div class="tab-pane fade" id="step2">
                            @Html.PartialAsync("UpdColaborador", Model.Colaborador).Result
                        </div>
						
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="modal-footer display: flex; -ms-flex-pack: end; justify-content: flex-end;">
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
	</div>

	
	<!-- Inicializadores -->
	<script>
		$(".next-btn").on("click", function () {
			if(UpdPersona.Validate())
                $('#wizard').wizard("next");
			return true;
		});
		$(".prev-btn").on("click", function () {
			$('#wizard').wizard("prev");
			return true;
		});
		
		$(function () {
            @(viewName).init();
        });

	</script>
</div>
