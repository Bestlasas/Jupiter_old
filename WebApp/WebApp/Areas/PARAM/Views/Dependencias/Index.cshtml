@{
    var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
    ViewBag.Tittle = "Dependencias";
    ViewBag.IconTittle = "fa fa-user";
}

<div id="@viewName">
    <!-- Scripts -->
    <script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
    <!-- Plantilla que se utilizará en la columna de acciones de la grilla -->
    <script id="command-template" type="text/x-kendo-template">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton#: Id#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Seleccione...
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class='btn btn-primary' data-modal="modal-lg" href='@Url.Action("UpdDependencia", "Dependencias", new { area = "PARAM" })/#: Id#'>Editar</a>
                <a class='btn btn-primary' data-modal="modal-xl" href='@Url.Action("InsSubDependencia", "Dependencias", new { area = "PARAM" })/?padreId=#: Id#'>Agregar subdependencia </a>
                <a class='btn btn-danger' onclick='Index.removeRow()'>Eliminar subdependencia </a>
            </div>
        </div>
        

    </script>


    <div class="container-fluid ">

        <div class="card">
            <div class="card-header">
                <div class="h5 m-0">
                    Listado de dependencias 
                    <label class="float-right mt-0 mb-0">
                        <a id="btnNuevo" class='btn btn-primary' data-modal="modal-xl" href='@Url.Action("InsDependencia", "Dependencias", new { area = "PARAM" })'>Agregar dependencia</a>
                        
                        
                        
                    </label>
                </div>

            </div>
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                @(Html.Kendo().TreeList<Dependencia>()
                                .Name("treeview")
                                //.DataTextField("Codigo")
                                .Events(events => events
                                    //.Select("Index.onSelect")
                                    .DataBound("Index.onDataBound")
                                )
                                .Columns(columns =>
                                {
                                    columns.Add().Field(e => e.Id).Width(280);
                                    columns.Add().Field(e => e.Codigo).Width(280);
                                    columns.Add().Field(e => e.Descripcion).Width(160);
                                    columns.Add().Field(e => e.Id).Width(280).TemplateId("command-template").Title("Acciones").Filterable(false).Width(130);
                                })
                                .Events(events => events.DataBound("Site.handleModal"))
                                .DataSource(dataSource => dataSource
                                .Read(read => read.Action("GetListDependencias", "Dependencias"))
                                .Events(e => e.Error("Site.handleError"))
                                .Model(m =>
                                {
                                    m.Id(f => f.Id);
                                    m.ParentId(f => f.padre_id);
                                    m.Field(f => f.Codigo);
                                    m.Field(f => f.Descripcion);
                                })
                                        )
                                )
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <div id="Detalle">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Inicializadores -->
    <script>
        $(function () {
            @(viewName).init();
        });

    </script>
</div>
