@model Persona
@{
    var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
}

<section id=@viewName>
    <form>
        @Html.HiddenFor(m => m.Id)
        <div class="card">
            
            <div class="modal-header">
                <h4 class="modal-title">Actualizar persona</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.PrimerNombre)
                        @Html.TextBoxFor(m => m.PrimerNombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PrimerNombre)
                    </div>
                </div>
            </div>
            <div class="modal-footer display: flex; -ms-flex-pack: end; justify-content: flex-end;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </form>
</section>

<script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
<script>
	$(function () {
            @(viewName).init();
        });
</script>



