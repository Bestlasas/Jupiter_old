@model Proyecto
@{
    var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
}


<div id=@viewName>
    <script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
        <div class="card">
            <div class="modal-header">
                <h4 class="modal-title">Rubros proyecto</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <script id="actionTemplate" type="text/x-kendo-template">
                <div class='text-center'>
                    <a class='btn btn-primary' data-modal2="modal-xl" href='@Url.Action("UpdRubroProyecto", "Proyectos", new { area = "TRANS" })/#=data.Id#'>Editar</a>
                    
                </div>
            </script>
            <div class="card-body">
              
                <h4>Información del proyecto </h4>
                <div class="form-group row">                    
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.PresupuestoAsignado)
                        @(Html.Kendo().NumericTextBoxFor<float>
                                    (m => m.PresupuestoAsignado)
                                    .Format("c")
                                    .Min(0)
                                    .HtmlAttributes(new { style = "width: 100%", disabled = "disabled" })
                        )
                       
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.PresupuestosinAsignar)
                        @(Html.Kendo().NumericTextBoxFor<float>
                                            (m => m.PresupuestosinAsignar)
                                            .Format("c")
                                            .Min(0)
                                            .HtmlAttributes(new { style = "width: 100%", disabled = "disabled" })
                        )
                       
                    </div>
                </div>
                <hr />
                <br />
                <div class="card">
                    <div class="card-header">
                        <div class="h5 m-0">
                            Listado de rubros <label class="float-right mt-0 mb-0">
                                @Html.ActionLink("Registrar", "InsRubroProyecto", "Proyectos", new { area = "TRANS", id = Model.Id }, new { @data_modal2 = "modal-xl", @class = "btn btn-primary float-right" })
                            </label>
                        </div>
                    </div>
                    <div class="card-body">
                        @(Html.Kendo().Grid<ProyectosRubrosView>()
                                    .Name("gridRubros")
                                    .Columns(columns =>
                                    {
                                       
                                        columns.Bound(p => p.ProyectoId).Hidden();
                                        columns.Bound(p => p.RubroId).Hidden();
                                        columns.Bound(p => p.Descripcion).Title("Descripcion").Width(130);
                                        columns.Bound(p => p.Valor).Title("Valor").Width(130);
                                        columns.Bound(p => p.Saldo).Title("Saldo").Width(130);
                      //                  columns.Bound(p => p.OperationType).Title("OperationType").Width(130);
                                        columns.Bound(p => p.ProyectoId).ClientTemplate("#=RubrosProyecto.actionTemplate(data)#").Title("Acciones").Filterable(false).Width(130);
                                        
                                    })
                                    .Pageable()
                                    .Sortable() 
                                    .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                                    .Scrollable()
                                    .Events(events => events.DataBound("Site.handleModal"))
                                    .HtmlAttributes(new { style = "height:550px;" })
                                    .DataSource(dataSource => dataSource
                                        .Ajax()
                                        .Read(read => read.Action("GetListRubrosProyecto", "Proyectos", new { id = Model.Id }))
                                        .Events(e => e.Error("Site.handleError"))
                                    )
                        )
                    </div>
                </div>
            </div>
            <div class="modal-footer display: flex; -ms-flex-pack: end; justify-content: flex-end;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    
</div>


<script>
	$(function () {
            @(viewName).init();
        });
</script>



