@model Persona
@{
    var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
}

<section id=@viewName>
    <form>
        @Html.HiddenFor(m => m.Id)
        <div class="card">
            <div class="card-header">
                <strong>Datos de usuario</strong>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.PrimerNombre)
                        @Html.TextBoxFor(m => m.PrimerNombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PrimerNombre)
                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.SegundoNombre)
                        @Html.TextBoxFor(m => m.SegundoNombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SegundoNombre)
                    </div>

                </div>

                
            </div>

            <div class="card-footer" style="display: flex; justify-content: flex-end;">
                <button class="btn btn-primary next-btn" type="button">Siguiente</button>
            </div>
        </div>

    </form>
</section>

<script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
<script>
	$(function () {
            @(viewName).init(eval("@ViewBag.Container"),"@Model.GetType().ToString()","@viewName" );
        });
</script>

